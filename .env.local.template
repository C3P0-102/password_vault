# MongoDB connection string
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/password-vault?retryWrites=true&w=majority

# NextAuth secret for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-super-secret-jwt-signing-key-here

# NextAuth URL (for production, this should be your domain)
NEXTAUTH_URL=http://localhost:3000

# Encryption secret for client-side encryption (32+ characters recommended)
NEXT_PUBLIC_ENCRYPTION_SECRET=your-32-character-encryption-secret-key
